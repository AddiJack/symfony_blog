{% extends "base.html.twig" %}

{% block title %}Category{% endblock %}

{% block body %}
    {% for category in categories %}
    <div>
        <h2>{{ loop.index }} Category : {{ category.name }}</h2>
    </div>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
{% endblock %}
